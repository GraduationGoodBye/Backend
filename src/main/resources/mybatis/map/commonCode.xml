<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommonCodeMapper">

    <select id="findUniversityAll" resultType="commonCode">
        SELECT * FROM common_code WHERE type = 'university'
    </select>
    <select id="findByUniversity" parameterType="String" resultType="commonCode">
        SELECT * FROM common_code WHERE type = 'university' AND name = #{name}
    </select>
    <select id="findMajorAll" resultType="commonCode">
        SELECT * FROM common_code WHERE type = 'major'
    </select>
    <select id="findByMajor" parameterType="String" resultType="commonCode">
        SELECT * FROM common_code WHERE type = 'major' AND name = #{name}
    </select>


</mapper>