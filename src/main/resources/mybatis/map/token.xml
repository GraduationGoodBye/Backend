<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ggb.graduationgoodbye.domain.auth.repository.TokenRepository">
  <insert id="save" parameterType="token" keyProperty="id">
    INSERT INTO tokens (token_value)
    VALUES (#{tokenValue});
  </insert>

  <update id="update" parameterType="token">
    UPDATE tokens SET
    token_value = #{tokenValue}
    WHERE id = #{id};
  </update>

  <delete id="delete" parameterType="int">
    DELETE FROM tokens WHERE id = #{id};
  </delete>

  <select id="findToken" parameterType="String" resultType="token">
    SELECT * FROM tokens WHERE token_value = #{tokenValue};
  </select>
</mapper>