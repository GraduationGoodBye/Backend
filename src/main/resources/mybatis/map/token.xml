<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ggb.graduationgoodbye.domain.auth.repository.TokenRepository">
    <insert id="save" parameterType="token" keyProperty="id">
        INSERT INTO tokens (refresh_token,access_token)
        VALUES (#{refreshToken}, #{accessToken});
    </insert>

    <update id="update" parameterType="token">
        UPDATE tokens SET
        access_token = #{accessToken},
        refresh_token = #{refreshToken}
        WHERE id = #{id};
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM tokens WHERE id = #{id};
    </delete>

    <select id="findByAccessToken" parameterType="String" resultType="token" >
        SELECT * FROM tokens WHERE access_token = #{accessToken};
    </select>

    <select id="findByAccessTokenAndRefreshToken" parameterType="String" resultType="token">
        SELECT * FROM tokens WHERE access_token = #{accessToken} AND refresh_token = #{refreshToken};
    </select>
</mapper>