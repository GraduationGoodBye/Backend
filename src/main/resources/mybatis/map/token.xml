<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TokenMapper">
  <insert id="save" parameterType="token" keyProperty="id">
    INSERT INTO tokens (user_id, refresh_token)
    VALUES (#{userId}, #{refreshToken});
  </insert>

  <update id="update" parameterType="token">
    UPDATE tokens SET
    refresh_token = #{refreshToken}
    WHERE id = #{id};
  </update>

  <delete id="delete" parameterType="int">
    DELETE FROM tokens WHERE id = #{id};
  </delete>

  <select id="findToken" parameterType="String" resultType="token">
    SELECT * FROM tokens WHERE refresh_token = #{refreshToken};
  </select>

  <select id="findByUserId" parameterType="String" resultType="token">
    SELECT * FROM tokens WHERE user_id = #{userId};
  </select>
</mapper>