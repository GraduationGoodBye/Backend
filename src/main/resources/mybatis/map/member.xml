<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ggb.graduationgoodbye.domain.member.repository.MemberRepository">

  <select id="findById" parameterType="Long" resultType="member">
    SELECT * FROM users WHERE id = #{id};
  </select>

  <insert id="save" parameterType="member" keyProperty="id">
    INSERT INTO users (email,profile,name,nickname,address,phone,gender,role)
    VALUES (#{email}, #{profile}, #{name}, #{nickname}, #{address}, #{phone}, #{gender}, #{role})
  </insert>

  <select id="findByEmail" parameterType="String" resultType="member">
    SELECT * FROM users WHERE email = #{email};
  </select>

</mapper>