<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <!-- cachedEnabled : 설정에서 각 매퍼에 설정된 캐시를 전역적으로 사용하는지 여부 -->
        <setting name="cacheEnabled" value="false" />
        <!-- useGeneratedKeys : 생성키에 대한 JDBC 지원 허용 여부 -->
        <setting name="useGeneratedKeys" value="true"/>
        <!-- defaultExecutorType : 기본 실행자 설정,
        SIMPLE : X, REUSE : PreparedStatement 재사용, BATCH : 구문 재사용, 수정 배치처리 -->
        <setting name="defaultExecutorType" value="REUSE" />
        <!-- jdbcTypeForNull : jdbc 타입을 파라미터에 제공하지 않을 때 null 처리한 jdbc 타입을 명시 -->
        <setting name="jdbcTypeForNull" value="NULL" />
        <!-- 데이터베이스의 컬럼명과 Java 객체의 필드명 간의 명명 규칙 차이를 자동으로 매핑 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
</configuration>
